<section class="section">
  <div class="container">
    <div class="row">
      <div class="col-12 col-sm-8 col-md-9">
        <div class="row">
          {% set i = 0 %}
          {% for post in posts %}

            {% set i = i + 1 %}
            {% set options = {} %}
            {% if i == 1 %}
              {% set class = "post_large" %}
              {% 
                set options = {
                  'preview_length': 45,
                  'enable_date': true
                }
              %}
            {% else %}
              {% set class = "post_small col-sm-6" %}
            {% endif %}

            {{
              siteMacros.post("#{class} col-12", post, options)
            }}
            
          {% endfor %}
        </div>
        {{function('wp_pagenavi')}}
      </div>
      <div class="col-12 col-sm-4 col-md-3">
        {% include 'sidebar.twig' %}
      </div>
    </div>
  </div>
</section>