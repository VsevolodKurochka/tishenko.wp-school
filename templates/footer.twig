{% if function('is_front_page') %}
  {% set image = options.footer_bg_2 %}
  {% set person = options.footer_person_2 %}
  {% set person_class = "statistics__person_2" %}
{% else %}
  {% set image = options.footer_bg_1 %}
  {% set person = options.footer_person_1 %}
  {% set person_class = "statistics__person_1" %}
{% endif %}
<section class="statistics wave_top" style="background-image: url({{image}})">
  <div class="scene statistics__person-scene">
    <div data-depth="0.2" class="statistics__person-cover"><img src="{{person}}" alt="{{options.footer_title}}" class="statistics__person {{person_class}}"></div>
  </div>
  <div class="scene">
    <div data-depth="0.4" class="bg-stars"></div>
  </div>
  <div class="container">
    <p class="statistics__subtitle title-sm">{{options.footer_subtitle}}</p>
    <p class="statistics__title title-md">{{options.footer_title}}</p>
    <button class="btn btn_lg btn_brand-1" data-action="modal" data-open="#modal-form">{{options.footer_btn}}</button>
  </div>
</section>
<footer class="footer">
  <div class="container footer__container">
    <div class="row">
      <div class="col-12 col-sm-6 col-md-3 footer__column">
        <p class="footer__title">Компания</p>
        <div class="footer__menu">
          {% include "menu-footer.twig" with {'menu': menu_footer_1.get_items} %}
        </div>
      </div>
      <div class="col-12 col-sm-6 col-md-3 footer__column">
        <p class="footer__title">ПРОГРАММЫ</p>
        <div class="footer__menu">
          {% include "menu-footer.twig" with {'menu': menu_footer_2.get_items} %}
        </div>
      </div>
      <div class="col-12 col-sm-6 col-md-3 footer__column">
        <p class="footer__title">Контакты</p>
        <div class="footer__group">
          <p class="footer__subtitle">Телефон</p>
          <a href="tel: {{options.phone}}" class="footer__link">{{options.phone}}</a>
        </div>
        <div class="footer__group">
          <p class="footer__subtitle">Email</p>
          <a href="tel: {{options.email}}" class="footer__link">{{options.email}}</a>
        </div>
      </div>
      <div class="col-12 col-sm-6 col-md-3 footer__column">
        <p class="footer__title">Мы в социальных сетях</p>
        <ul class="footer__social">
          {% for item in options.social %}
            <li>
              <a href="{{item.link}}"><img src="{{item.icon}}" alt="#"></a>
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
  <div class="footer__copy">
    <div class="container">
      <div class="footer__copy-row row">
        <div class="col-12 col-sm-3">
          {{function('get_custom_logo')}}
        </div>
        <div class="col-12 col-sm-9">
          <div class="footer__copy-menu">
            {% include "menu-footer.twig" with {'menu': menu_footer.get_items} %}
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>
<div class="modal" id="modal-form">
  <div class="modal__box modal__box_default modal__box_effect-1">
    <div class="modal__header">
      <p class="modal__title">Заголовок</p>
      <button class="modal__close" data-close="modal">&times;</button>
    </div>
    <div class="modal__body">
      <script id="7fd068bd9085054a51a518c8313b42395dcee9cc" src="https://artsmart-ik.com/pl/lite/widget/script?id=43792"></script>
    </div>
  </div>
</div>